<Widgets>:
    FloatLayout:
        Button:
            pos_hint: {"x":0.1, "y":5.4}
            size_hint: 2.0, 0.5
            text: "Upload Image"
            on_release: root.Upload_btn()
        Button:
            pos_hint: {"x":0.1, "y":4.9}
            size_hint: 2.0, 0.5
            text: "Enter Metadata"
            on_release: root.Metadata_btn()
        Button:
            pos_hint: {"x":0.1, "y":4.4}
            size_hint: 2.0, 0.5
            text: "Process Image"
            on_release: root.Process_btn()

<ProcessStartPopup>:
    Label:
        text: "Process Started."
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

    Button:
        id: P_start_ok
        text: "OK"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}
        on_release: root.end()

<ProcessEndPopup>:
    Label:
        text: "Process Finished."
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

    Button:
        id: P_end_ok
        text: "OK"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}
        on_release: root.end()

<MetadataEntryPopup>:
    Label:
        text: "Enter Metadata"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

    Label:
        text: "Metadata 1:"
        size_hint: 0.4, 0.05
        pos_hint: {"x":0.1, "top":0.8}

    TextInput:
        pos_hint: {"x":0.5, "top":0.8}
        size_hint: 0.4, 0.05
        multiline: False
        font_size: (root.width**2 + root.height**2) / 8**2

    Label:
        text: "Metadata 2:"
        size_hint: 0.4, 0.05
        pos_hint: {"x":0.1, "top":0.7}

    TextInput:
        pos_hint: {"x":0.5, "top":0.7}
        size_hint: 0.4, 0.05
        multiline: False
        font_size: (root.width**2 + root.height**2) / 8**2

    Label:
        text: "Metadata 3:"
        size_hint: 0.4, 0.05
        pos_hint: {"x":0.1, "top":0.6}

    TextInput:
        pos_hint: {"x":0.5, "top":0.6}
        size_hint: 0.4, 0.05
        multiline: False
        font_size: (root.width**2 + root.height**2) / 8**2

    Label:
        text: "Metadata 4:"
        size_hint: 0.4, 0.05
        pos_hint: {"x":0.1, "top":0.5}

    TextInput:
        pos_hint: {"x":0.5, "top":0.5}
        size_hint: 0.4, 0.05
        multiline: False
        font_size: (root.width**2 + root.height**2) / 8**2

    Label:
        text: "Metadata 5:"
        size_hint: 0.4, 0.05
        pos_hint: {"x":0.1, "top":0.4}

    TextInput:
        pos_hint: {"x":0.5, "top":0.4}
        size_hint: 0.4, 0.05
        multiline: False
        font_size: (root.width**2 + root.height**2) / 8**2

    Button:
        text: "Save"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}